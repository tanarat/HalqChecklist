<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.silk.checklist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />
    

    <application
        android:name="org.silk.checklist.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.silk.checklist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.silk.checklist.ChecklistActivity"
            android:label="@string/title_activity_checklist" >
        </activity>
        <activity
            android:name="org.silk.checklist.ItemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name="org.silk.checklist.ItemListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name="org.silk.checklist.ItemDetailActivity"
            android:label="@string/title_item_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
        <activity
            android:name="org.silk.checklist.SheetListActivity"
            android:label="@string/title_activity_sheet_list" >
        </activity>
        <activity
            android:name="org.silk.checklist.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="org.silk.checklist.SheetDetailActivity"
            android:label="@string/title_activity_sheet_detail" >
        </activity>
    </application>

</manifest>